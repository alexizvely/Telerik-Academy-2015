//@import  "ExamHelp.styl"

.clearfix
  zoom 1
  &:after
    content ''
    display block
    clear both
    height 0
    
clearfix()
  @extend .clearfix
  
  ///////////////////////////////////////////////
linearGradient(stops)
  w3cGradient = 'linear-gradient(to bottom, '
  prefixedGradient = 'linear-gradient(top, '
  
  i = 1

  for stop in stops
    w3cGradient += stop
    prefixedGradient += stop
    if i is not length(stops)
      w3cGradient += ', '
      prefixedGradient += ', '
    i += 1
      
  w3cGradient += ')'
  prefixedGradient += ')'
  
  background unquote(w3cGradient)
  background unquote('-webkit-' + prefixedGradient)
  background unquote('-o-' + prefixedGradient)
  background unquote('-ms-' + prefixedGradient)
  
  ///////////////////////////////////////////////
  vendor(prop, args)
    -webkit-{prop} args
    -moz-{prop} args
    {prop} args
.button
  vendor('opacity', 0.5)
  vendor('border-radius', 5px)

  ///////////////////////////////////////////////
box(bgColor, side)
  width side
  height @width
  background-color bgColor
  borderColor= darken(bgColor, 25%)
  if dark(bgColor)
    borderColor= lighten(bgColor, 25%)
  border 15px solid borderColor
.box
  display inline-block
  margin 15px

bgColors= #ccc #222 #123 #321 #678910 #abcdef #f77 #00f

i=1
for bgColor in bgColors
  .box-{i}
    box(bgColor, 200px)
  i+=1

  ///////////////////////////////////////////////
  .horizontal-list
  list-style-type none
  clear-fix()
  
  .list-item
    float left
    border-right 1px solid #ccc
    
    &:last-of-type
      border-right none
.link
  color #59f
  display inline-block
  padding 5px 15px
  text-decoration none
  &:hover
    text-decoration underline
